<?xml version="1.0"?>
<config>
    <modules>
        <Meetanshi_CookieNotice>
            <version>1.0.2</version>
        </Meetanshi_CookieNotice>
    </modules>
    <global>
        <blocks>
            <cookienotice>
                <class>Meetanshi_CookieNotice_Block</class>
            </cookienotice>
        </blocks>
        <helpers>
            <cookienotice>
                <class>Meetanshi_CookieNotice_Helper</class>
            </cookienotice>
        </helpers>
        <models>
            <cookienotice>
                <class>Meetanshi_CookieNotice_Model</class>
            </cookienotice>
        </models>
    </global>
    <frontend>
        <layout>
            <updates>
                <cookienotice>
                    <file>cookienotice.xml</file>
                </cookienotice>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <cookienotice>
                    <file>cookienotice.xml</file>
                </cookienotice>
            </updates>
        </layout>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <cookienotice translate="title">
                                            <title>Cookie Notice Compliance</title>
                                        </cookienotice>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <cookienotice>
            <general>
                <type>v-bar</type>
                <bar_position>v-top</bar_position>
                <box_position>v-bottom-right</box_position>
                <behaviour>365</behaviour>
                <autohide>0</autohide>
				<autoaccept>0</autoaccept>
				<expire>0</expire>
            </general>
            <content>
                <show>default</show>
                <custom_message>This websites use cookies.</custom_message>
                <custom_accept>Accept</custom_accept>
				<custom_close>Close</custom_close>
                <custom_more_info>More information</custom_more_info>
                <cms_page>privacy-policy-cookie-restriction-mode</cms_page>
            </content>
			<popup_style>
				<font_family>vollkorn</font_family>
				<model_text_align>left</model_text_align>
				<model_title_size>small</model_title_size>
				<model_border>1</model_border>
				<model_border_color>FF6666</model_border_color>
				<header_background_color>0A89D8</header_background_color>
				<header_font_color>ffffff</header_font_color>
				<accept_button_background_color>ffca30</accept_button_background_color>
				<close_button_background_color>ffca30</close_button_background_color>
				<close_button_color>000000</close_button_color>
                <policy_button_background_color>000000</policy_button_background_color>
				<privace_policy_color>ffffff</privace_policy_color>
				<accept_button_color>000000</accept_button_color>
				<model_title_color>ffffff</model_title_color>
			</popup_style>
        </cookienotice>
    </default>
</config>
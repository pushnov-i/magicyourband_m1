        <helpers>
            <innoexts_geoip>
                <class>Innoexts_GeoIp_Helper</class>
            </innoexts_geoip>
        </helpers>
    </global>
    <default>
        <innoexts_geoip>
            <options>
                <use_php_extension>1</use_php_extension>

<config>
    <sections>
        <innoexts_geoip translate="label" module="innoexts_geoip">
            <label>IP Geolocation</label>
            <tab>customer</tab>
            <frontend_type>text</frontend_type>
            <sort_order>145</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <options translate="label">
                    <label>Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <use_php_extension translate="label comment">
                            <label>Use PHP Extension</label>
                            <comment><![CDATA[Enable GeoIP PHP extension if installed]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </use_php_extension>
                        <database_file translate="label comment">
                            <label>Database File</label>
                            <comment><![CDATA[GeoIP City database file path. It can be absolute or relative to the document root]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </database_file>
                    </fields>
                </options>
            </groups>
        </innoexts_geoip>
    </sections>
</config>
<?php $_item = $this->getItem() ?>  
<?php $is3d=false; ?>
<tr>
    <td align="left" valign="top" style="font-size:11px; padding:3px 9px;">
        <strong><?php echo $this->escapeHtml($_item->getName()) ?></strong>
        <?php if ($this->getItemOptions()): ?>
        <?php 
         foreach ($this->getItemOptions() as $option){
             if ($option['label']=='printJobId'){ 
              $is3d=true; 
              $label = $option['label'];
              $value = nl2br($option['value']);
             }
         } 
         
         ?>
        <dl style="margin:0; padding:0;">
          <?php if(!$is3d){ ?>
            <?php foreach ($this->getItemOptions() as $option): ?>
            <dt><strong><em><?php echo $option['label'] ?></em></strong></dt>
            <dd style="margin:0; padding:0 0 0 9px;">
                <?php echo nl2br($option['value']) ?>
            </dd>
            <?php endforeach; ?>
         <?php }else{ ?>    
             <dt><strong><em><?php echo $label ?></em></strong></dt>
              <dd style="margin:0; padding:0 0 0 9px;">
               <?php echo $value ?>
             </dd>
         <?php } ?>    
        </dl>
        <?php endif; ?>
        <?php $addInfoBlock = $this->getProductAdditionalInformationBlock(); ?>
        <?php if ($addInfoBlock) :?>
            <?php echo $addInfoBlock->setItem($_item->getOrderItem())->toHtml(); ?>
        <?php endif; ?>
        <?php echo $this->escapeHtml($_item->getDescription()) ?>
    </td>
    <td align="left" valign="top" style="font-size:11px; padding:3px 9px;">
    <?php 
    $sku = $this->escapeHtml($this->getSku($_item));
    $pieces = explode("-", $sku); 
    echo $pieces[0]; 
    ?>
    </td>
    <td align="center" valign="top" style="font-size:11px; padding:3px 9px;"><?php echo $_item->getQty()*1 ?></td>
</tr>

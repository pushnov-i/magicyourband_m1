                    <?php if ($helper->isCountryRequired()) : ?><em>*</em><?php endif; ?>
                    <?php echo $helper->__('Country') ?>
                </label>
                <div class="input-box">
                    <?php echo Mage::getBlockSingleton('directory/data')->getCountryHtmlSelect($this->getCountryId()) ?>

                </label>
                <div class="input-box">
                    <input class="input-text<?php if ($helper->isStreetRequired()) : ?> required-entry<?php endif; ?>" id="street1" type="text" name="street1" value="<?php echo $this->htmlEscape($this->getStreet1()) ?>" />
